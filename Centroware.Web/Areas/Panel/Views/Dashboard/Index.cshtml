@model Centroware.Model.ViewModels.DashboardVm
@{
    ViewData["Title"] = "Dashboard";
}
<div class="row">
    <div class="col-md-4">
        <div class="card card-custom wave wave-animate-slow wave-primary mb-8 mb-lg-0">
            <div class="card-body">
                <div class="d-flex align-items-center p-5">
                    <div class="d-flex flex-column">
                        <a href="#" class="text-dark text-hover-primary font-weight-bold font-size-h4 mb-3">
                            Team Count
                        </a>
                        <div class="text-dark-75 center">
                            @Model.TeamsCount
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-custom wave wave-animate wave-danger mb-8 mb-lg-0">
            <div class="card-body">
                <div class="d-flex align-items-center p-5">
                    <div class="d-flex flex-column">
                        <a href="#" class="text-dark text-hover-primary font-weight-bold font-size-h4 mb-3">
                            Contacts
                        </a>
                        <div class="text-dark-75">
                            @Model.ContactCount
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-custom wave wave-animate-fast wave-success">
            <div class="card-body">
                <div class="d-flex align-items-center p-5">
                    <div class="d-flex flex-column">
                        <a href="#" class="text-dark text-hover-primary font-weight-bold font-size-h4 mb-3">
                            Posts
                        </a>
                        <div class="text-dark-75">
                            @Model.ArticleCount
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6">
        <div class="card card-custom card-stretch gutter-b">
            <!--begin::Header-->
            <div class="card-header border-0">
                <h3 class="card-title font-weight-bolder text-dark">Last Team Members</h3>
                <div class="card-toolbar">
                </div>
            </div>
            <!--end::Header-->
            <!--begin::Body-->
            <div class="card-body pt-2">
                @foreach (var item in Model.Teams)
                {
                    <!--begin::Item-->
                    <div class="d-flex align-items-center mb-10">
                        <!--begin::Symbol-->
                        <div class="symbol symbol-40 symbol-light-success mr-5">
                            <span class="symbol-label">
                                <img src="/Images/@item.StaticImage" class="h-75 align-self-end" alt="">
                            </span>
                        </div>
                        <!--end::Symbol-->
                        <!--begin::Text-->
                        <div class="d-flex flex-column flex-grow-1 font-weight-bold">
                            <a href="#" class="text-dark text-hover-primary mb-1 font-size-lg">@item.Name</a>
                            <span class="text-muted">@item.Specialization</span>
                        </div>
                        <!--end::Text-->
                    </div>
                    <!--end::Item-->}
            </div>
            <!--end::Body-->
        </div>
    </div>
    <div class="col-md-6">

        <div class="card card-custom card-stretch gutter-b">
            <!--begin::Header-->
            <div class="card-header border-0">
                <h3 class="card-title font-weight-bolder text-dark">Last Posts In Blog</h3>
                <div class="card-toolbar">
                    <div class="dropdown dropdown-inline">
                        <a href="#" class="btn btn-clean btn-hover-light-primary btn-sm btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="ki ki-bold-more-ver"></i>
                        </a>
                    </div>
                </div>
            </div>
            <!--end::Header-->
            <!--begin::Body-->
            <div class="card-body pt-0">
                @foreach (var item in Model.Blogs)
                {
                    <!--begin::Item-->
                    <div class="d-flex align-items-center flex-wrap mb-8">
                        <!--begin::Symbol-->
                        <div class="symbol symbol-50 symbol-light mr-5">
                            <span class="symbol-label">
                                <img src="/Images/@item.ImagePath" class="h-50 align-self-center" alt="">
                            </span>
                        </div>
                        <!--end::Symbol-->
                        <!--begin::Text-->
                        <div class="d-flex flex-column flex-grow-1 mr-2">
                            <a href="#" class="font-weight-bold text-dark-75 text-hover-primary font-size-lg mb-1">@item.Title</a>
                            <span class="text-muted font-weight-bold">@item.Category</span>
                        </div>
                        <!--end::Text-->
                        <span class="label label-xl label-light label-inline my-lg-0 my-2 text-dark-50 font-weight-bolder">+82$</span>
                    </div>
                    <!--end::Item-->}
            </div>
            <!--end::Body-->
        </div>
    </div>
</div>
@section Scripts{
}


